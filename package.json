{
  "name": "compound-open-oracle",
  "version": "1.0.0",
  "description": "The Compound Open Oracle",
  "main": "index.js",
  "repository": "https://github.com/compound-finance/open-oracle",
  "author": "Compound Labs, Inc.",
  "license": "MIT",
  "dependencies": {
    "truffle-hdwallet-provider": "^1.0.10",
    "web3": "1.0.0-beta.55",
    "yargs": "^13.2.4"
  },
  "devDependencies": {
    "ganache-core": "^2.5.5",
    "jest": "^24.8.0"
  },
  "scripts": {
    "saddle:compile": "mkdir -p .build && solc --combined-json bin,abi --optimize contracts/*.sol > .build/contracts.json",
    "saddle:test:run": "node --async-stack-traces --stack-trace-limit=1000 ./node_modules/jest-cli/bin/jest.js",
    "saddle:deploy": "yarn run saddle:compile && node ./.tsbuilt/deploy.js $@",
    "test": "yarn run saddle:compile && yarn run saddle:test:run"
  }
}
